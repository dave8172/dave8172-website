---
const { title, description, href, image, tags = [] } = Astro.props;
import BaseLayout from "../layouts/BaseLayout.astro";
---

<article class="project-card">
  <a href={href} class="card-link">
    <img src={image} alt={title} loading="lazy" />
    <div class="content">
      <h3>{title}</h3>
      <p>{description}</p>

      {tags.length > 0 && (
        <ul class="tags">
          {tags.map((tag:string) => <li>{tag}</li>)}
        </ul>
      )}
    </div>
  </a>
</article>

<style>
.project-card {
  background: #111113;
  border: 1px solid var(--border);
  border-radius: 12px;
  overflow: hidden;
  transition: transform 0.2s ease, border-color 0.2s ease;
}

.project-card:hover {
  transform: translateY(-2px);
  border-color: var(--muted);
}

.card-link {
  color: inherit;
  text-decoration: none;
  display: block;
}

img {
  width: 100%;
  height: 200px;
  object-fit: cover;
}

.content {
  padding: 1rem;
}

h3 {
  margin: 0 0 0.5rem;
  font-size: 1.1rem;
}

p {
  margin: 0 0 0.75rem;
  color: var(--muted);
  font-size: 0.95rem;
}

.tags {
  display: flex;
  gap: 0.5rem;
  flex-wrap: wrap;
  list-style: none;
  padding: 0;
  margin: 0;
}

.tags li {
  font-size: 0.75rem;
  padding: 0.25rem 0.5rem;
  border-radius: 999px;
  background: #1a1a1d;
}
</style>